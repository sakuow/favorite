    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "", "edit_user_path(user.id)", class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:book, local:true do |b| %>
        <h4>Title</h4>
        <%= b.text_field:title %>
        <h4>Opinion</h4>
        <%= b.text_area:body %>
        <%= b.submit "Create Book", class:'btn btn-success' %>
      <% end %>
    </div>
